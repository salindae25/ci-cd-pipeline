{
    "scheme": "custom",
    "customSchema": "major.minor.build[->patch]",
    "versionFile": "./package.json",
    "files": [
        "./version-list.json"
    ],
    "rules": [
        {
            "trigger": "commit",
            "branch": "feature/*",
            "suffix": "-alpha",
            "bump": "patch"
        },
        {
            "trigger": "pull-request",
            "branch": "develop",
            "suffix": "-alpha",
            "bump": "build"
        },
        {
            "trigger": "commit",
            "branch": "staging",
            "suffix": "-beta",
            "bump": "build"
        },
        {
            "trigger": "pull-request",
            "destBranch": "main",
            "suffix": "-rc",
            "tag": true
        },
        {
            "trigger": "commit",
            "branch": "release/*",
            "bump": "major",
            "tag": true,
            "reset": [
                "minor",
                "build"
            ]
        }
    ]
}